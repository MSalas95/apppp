<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    tools:context="com.moviloft.motoapp.Menu.activityRegistro"
    android:weightSum="1"
    android:background="#ff232323"
    android:id="@+id/asdf">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="0.3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:paddingRight="5dp"
                android:gravity="bottom"
                android:id="@+id/asd"
                android:layout_weight="1">

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etNombre"
                android:hint="Ingresa tu Nombre"
                android:textSize="14dp"
                android:layout_gravity="left"
                android:textColorHint="#ff9fa162"
                android:layout_marginBottom="5dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etApellido"
                android:layout_gravity="left"
                android:hint="Ingresa tus apellidos"
                android:textSize="14dp"
                android:textColorHint="#ff9fa162"
                android:layout_marginBottom="5dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etCiudad"
                android:hint="Ciudad"
                android:textSize="14dp"
                android:textColorHint="#ff9fa162"
                android:layout_marginBottom="5dp"
                android:textColor="#ffffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ivAvatar"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_launcher"
                android:adjustViewBounds="false"
                android:background="#ffae7c03"
                android:scaleType="fitXY" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:paddingRight="16dp"
        android:layout_weight="0.7">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etTelefono"
            android:hint="Teléfono móvil"
            android:textSize="14dp"
            android:textColorHint="#ff9fa162"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etCorreo"
            android:hint="Correo electrónico"
            android:textSize="14dp"
            android:textColorHint="#ff9fa162"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etClave"
            android:hint="Contraseña"
            android:textSize="14dp"
            android:textColorHint="#ff9fa162"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etConfirmarClave"
            android:hint="Confirmar contraseña"
            android:textSize="14dp"
            android:textColorHint="#ff9fa162"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="#ffe2e2e2"
                android:text="¿Posee motocicleta?"
                android:layout_weight="0.22"
                android:textSize="14sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si"
                android:id="@+id/rbMoto1"
                android:checked="false"
                android:layout_weight="0.23"
                android:textColor="#ffd3d3d3"
                android:textSize="14dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/rbMoto2"
                android:checked="false"
                android:textColor="#ffd3d3d3"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etMarca"
                android:hint="Marca"
                android:textSize="14dp"
                android:textColorHint="#ff9fa162"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etModelo"
                android:hint="Modelo"
                android:textSize="14dp"
                android:textColorHint="#ff9fa162"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textColor="#ffffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbTerminos"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_gravity="center"
                android:textColor="#ffe2dbd9"
                android:textSize="14sp"
                android:text="@string/accept_terms" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Registrarse"
                android:id="@+id/btRegister"
                android:textColor="#ff9fa162"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_border"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
