<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moviloft.motoapp.Motoclasificados.Motoclasificados"
    android:background="#ff232323">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ver Motoclasificados"
            android:id="@+id/bt_ver_motoclasificados"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:background="#ff828282"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#ffeeeeee"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Publicar Motoclasificado"
            android:id="@+id/bt_publicar_motoclasificado"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:background="#ff828282"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="#ffeeeeee"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1" />
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.moviloft.motoapp.Motoclasificados.Motoclasificados"
        tools:ignore="MergeRootFrame"
        android:layout_below="@+id/linearLayout2" >

    </FrameLayout>


</RelativeLayout>
